<h1><%= @house.name %></h1>

<img src="<%= @house.img_url %>">

<% if @house.characters.present? %>
  <h2>Characters:</h2>
  <% @house.characters.each do |character| %>
  <li class="house-character">
    <p><%= character.name %></p>
    <img src="<%= character.img_url %>">
  </li>
  <% end %>
<% end %>

<p>
  <%= link_to "Back to the Houses", houses_path %> | <%= link_to 'Delete', house_path(@house), method: :delete,
  data: { confirm: 'Are you sure you want to delete this?'} %> | <%= link_to 'Edit', edit_house_path(@house) %>
</p>
