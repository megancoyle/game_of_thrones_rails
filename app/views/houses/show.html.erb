<h1><%= @house.name %></h1>

<img class="header-house" src="<%= @house.img_url %>">

<% if @house.characters.present? %>
  <div class="characters-container">
    <h2>Characters:</h2>
    <% @house.characters.each do |character| %>
    <li class="house-character">
      <p><%= link_to character.name, house_character_path(@house, character) %></p>
      <%= link_to (image_tag character.img_url), house_character_path(@house, character) %>
    </li>
    <% end %>
  </div>
<% end %>
<%= link_to 'Add Character (+)', new_house_character_path(@house) %>
<p>
  <%= link_to 'Back to the Houses', houses_path %> | <%= link_to 'Delete', house_path(@house), method: :delete,
  data: { confirm: 'Are you sure you want to delete this?'} %> | <%= link_to 'Edit', edit_house_path(@house) %>
</p>
